<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom" 
    android:background="#FFFFFF" 
    >

    <ImageView 
        android:id="@+id/tv_image"
        android:layout_width="wrap_content" 
        android:layout_centerHorizontal="true" 
        android:layout_centerVertical="true" 
        android:layout_height="wrap_content"  
        android:layout_gravity="center" 
        android:src="@drawable/launch_screen" 
        android:scaleType="centerCrop" 
        android:layout_marginTop="0dp"
        android:layout_marginBottom="36dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        android:gravity="bottom|center">
        <TextView 
            android:id="@+id/tv_to_be_centered"
            android:color="#0C0C0C" 
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center" 
            android:text="from"
            android:layout_centerHorizontal="true" 
            android:layout_below="@id/tv_image"  
        />
        <TextView
            android:id="@+id/tv_to_be_centered1"
            android:color="#0C0C0C" 
            android:textColor="#3700FF"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center" 
            android:text="Africa systems"
            android:layout_centerHorizontal="true" 
            android:layout_below="@id/tv_to_be_centered"  
            android:layout_marginBottom="25dp"
        />
 </LinearLayout>

</RelativeLayout>


